{
	"extends": "@blueai/configs/ts/vite-app",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@/public/*": ["./public/*"],
		},
	},
	"files": ["./node_modules/@blueai/ui/icons.d.ts"],
	"include": ["src"],
	"exclude": ["dist", "build", "node_modules"],
}
